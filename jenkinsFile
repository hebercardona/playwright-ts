pipeline {
    agent any

    environment {
        SUITE_NAME='Playwright'
    }

    stages {
        stage('Playwright Install') {
            steps {
                bat '''
                npx playwright@1.28.1 install
                npm install
                '''
            }
        }
        stage('Running Tests') {
            steps {
                bat 'npx playwright test ./jenkinsTest.spec.ts'
                echo 'Hello world!' 
            }
        }
    }
    post('Publish Report') {
        always {
                publishHTML([
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'playwright-report',
                    reportFiles: 'index.html',
                    reportName: 'Playwright Report',
                    reportTitles: ''
])
                echo 'Publishing Report' 
        }
    }
}