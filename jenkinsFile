pipeline {
    agent any 
    stages {
        stage('Playwright Install') {
            steps {
                bat '''
                npx playwright@1.28.1 install
                npm install
                '''
            }
        }
        stage('Running Tests') {
            steps {
                bat 'npx playwright test ./jenkinsTest.spec.ts'
                echo 'Hello world!' 
            }
        }
        stage('Publish Report') {
            steps {
                publishHTML([
                            allowMissing: false,
                            alwaysLinkToLastBuild: true,
                            keepAll: true,
                            reportDir: 'playwright-report',
                            reportFiles: 'index.html',
                            reportName: 'results',
                            reportTitles: 'title'
                        ])
                echo 'Publishing Report' 
            }
        }
    }
}