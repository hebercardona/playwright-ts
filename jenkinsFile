pipeline {
    agent any 
    stages {
        stage('Playwright Install') {
            steps {
                bat '''
                npx playwright@1.28.1 install
                npm install
                '''
            }
        }
        stage('Running Tests') {
            steps {
                bat 'npx playwright test ./jenkinsTest.spec.ts'
                echo 'Hello world!' 
            }
        }
    }
    post('Publish Report') {
        always {
                publishHTML([
                            allowMissing: false,
                            alwaysLinkToLastBuild: false,
                            keepAll: false,
                            reportDir: './playwright-report',
                            reportFiles: 'index.html',
                            reportName: 'results',
                        ])
                echo 'Publishing Report' 
        }
    }
}